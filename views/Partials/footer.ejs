<!--code to confirm the action of deleting a collection or a specifc song from a collection-->


<script>
  document.addEventListener("DOMContentLoaded", function () {
    // Confirm before deleting a collection
    document.querySelectorAll(".js-delete-collection-form").forEach(function (form) {
      form.addEventListener("submit", function (e) {
        const ok = confirm("Are you sure you want to delete this collection? This cannot be undone.");
        if (!ok) {
          e.preventDefault();
        }
      });
    });



    //code which confirms the deletion of a song

    document.querySelectorAll(".js-delete-song-form").forEach(function (form) {
      form.addEventListener("submit", function (e) {
        const ok = confirm("Are you sure you want to remove this song from the collection?");
        if (!ok) {
          e.preventDefault();
        }
      });
    });
  });
</script>



    
